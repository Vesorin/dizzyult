/* Daily Challenge Page Styles */

.daily-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fffbe8;
  min-height: 100vh;
  --daily-border-width: 1px;
  background-image: url('/dizzyultadv/images/backgroundforest.PNG');
  background-size: cover;
  background-position: center;
}

.daily-header {
  position: relative;
  width: 100%;
  height: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: url('/dizzyultadv/images/headerforest.png') center/cover no-repeat;
  border-bottom: none;
  z-index: 1;
}

.daily-header-content {
  position: relative;
  width: 100%;
  max-width: 1200px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 48px;
  z-index: 2;
}

.daily-star-button {
  width: 90px;
  height: 90px;
  background-color: #7a1a1a;
  border: none;
  border-radius: 16px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease, transform 0.3s ease;
  flex-shrink: 0;
  box-shadow: 0 4px 18px 0 rgba(44,34,0,0.18);
}
.daily-star-button:hover {
  background-color: #410505;
  transform: scale(1.08);
}
.daily-star-button:active {
  transform: scale(0.95);
}
.daily-star-button img {
  width: 40px;
  height: 40px;
  object-fit: contain;
}

.daily-header-title {
  font-family: 'Cinzel', serif;
  font-size: 2.5rem;
  color: #ffe3c6;
  text-shadow: 0 2px 8px #2c1a07, 0 1px 0 #000;
  letter-spacing: 2px;
  margin-bottom: 0.2em;
  text-align: center;
}
.daily-header-subtitle {
  font-family: 'Noto Serif', serif;
  font-size: 1.1rem;
  color: #fffbe8;
  text-shadow: 0 1px 6px #2c1a07, 0 1px 0 #000;
  font-weight: 400;
  text-align: center;
  letter-spacing: 1px;
}

.daily-main {
  position: relative;
  display: flex;
  gap: 32px;
  min-height: 800px;
  align-items: flex-start;
  flex-grow: 1;
  padding: 0;
}

.daily-sidebar {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  width: 320px;
  min-width: 320px;
  height: 100%;
  padding: 16px;
  background-color: #fffbe8;
  border-right: 2.5px solid #f58545;
  gap: 0;
  justify-content: space-between;
  border-radius: 32px 0 0 32px;
  box-shadow: 0 4px 30px 0 rgba(44,34,0,0.10);
}

.daily-sidebar-header {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding-bottom: 0;
}

.daily-sidebar-title {
  font-family: "Inter", sans-serif;
  font-size: 24px;
  font-weight: 600;
  line-height: 1.2;
  color: #1e1e1e;
  margin: 0;
  letter-spacing: -0.48px;
  height: 31px;
}

.daily-sidebar-subtitle {
  font-family: "Inter", sans-serif;
  font-size: 20px;
  font-weight: 400;
  line-height: 1.2;
  color: #757575;
  margin: 0;
  height: 23px;
}

.daily-sidebar-content {
  display: flex;
  flex-direction: column;
  height: 1183px;
  font-family: "Inter", sans-serif;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.4;
  color: #1e1e1e;
  gap: 12px;
}

.daily-sidebar-content p {
  margin: 0;
  line-height: 1.4;
}

.daily-sidebar-content ul {
  margin: 0;
  padding-left: 24px;
  list-style: disc;
}

.daily-sidebar-content li {
  margin: 0;
  line-height: 1.4;
}

.daily-content-area {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 24px;
  padding: 24px 24px 24px 0;
  min-height: 0;
  background: #fffbe8;
  border-radius: 0 32px 32px 0;
  box-shadow: 0 4px 30px 0 rgba(44,34,0,0.10);
}

.daily-main-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 0;
}

.daily-challenge-image {
  width: 100%;
  height: 460px;
  border: var(--daily-border-width) solid #d9d9d9;
  border-radius: 16px;
  overflow: hidden;
  display: flex;
  align-items: stretch;
  justify-content: center;
  background-color: white;
  padding: 0;
}

.daily-challenge-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.daily-editor-section {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.daily-code-wrapper {
  border: var(--daily-border-width) solid #d9d9d9;
  border-radius: 16px;
  overflow: hidden;
  height: 460px;
}

.daily-code-block {
  display: flex;
  width: 100%;
  max-width: 824px;
  background-color: white;
  height: 100%;
}

.daily-code-line-numbers {
  display: flex;
  flex-direction: column;
  width: 48px;
  padding: 16px 8px;
  background-color: white;
  border-right: var(--daily-border-width) solid #d9d9d9;
  text-align: right;
  font-family: "Roboto Mono", monospace;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.3;
  color: #b3b3b3;
  box-sizing: border-box;
  height: 100%;
}

.daily-code-line-number {
  margin: 0;
  height: auto;
  white-space: nowrap;
  line-height: 1.3;
}

.daily-code-content {
  flex: 1;
  height: 100%;
  background-color: #f5f5f5;
  box-sizing: border-box;
  display: flex;
  align-items: stretch;
}

.daily-input-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.daily-input {
  width: 824px;
  min-height: 80px;
  padding: 16px;
  border: 1px solid #d9d9d9;
  border-radius: 16px;
  background-color: white;
  font-family: "Inter", sans-serif;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.4;
  color: #b3b3b3;
  outline: none;
  transition: border-color 0.2s ease;
  resize: none;
}

.daily-input:focus {
  border-color: #2c2c2c;
  color: #1e1e1e;
}

.daily-input::placeholder {
  color: #b3b3b3;
}

@media (max-width: 1200px) {
  .daily-main {
    height: auto;
    flex-direction: column;
    gap: 24px;
    padding: 24px;
  }

  .daily-sidebar {
    width: 100%;
    height: auto;
    max-height: 400px;
    overflow-y: auto;
    border-right: none;
    border-bottom: 1px solid #d9d9d9;
  }

  .daily-content-area {
    padding: 0;
  }

  .daily-challenge-image img,
  .daily-code-block {
    width: 100%;
    max-width: 100%;
  }

  .daily-input {
    width: 100%;
  }
}

@media (max-width: 768px) {
  .daily-header {
    padding: 16px;
    gap: 16px;
  }

  .daily-header-title {
    font-size: 20px;
  }

  .daily-sidebar {
    padding: 12px;
    gap: 12px;
  }
}
